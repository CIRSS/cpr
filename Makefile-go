
clean:
	go clean -cache -x ./... || true

purge: clean
	rm -f go.sum
	chmod -R +w ${GOPATH}
	rm -rf ${GOPATH}/*

depend:
	go mod tidy

build: depend
	go build ./...

# disable test result caching using: -count 1
# disable parallel execution of tests using: -p 1 
test: build
	go test ./... -count 1 -p 1

install: build
	go install ./...   

package: install
